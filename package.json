{
  "name": "archon",
  "version": "2.0.0",
  "description": "The Complete AI-Powered Development Workspace",
  "main": "src/light/server.js",
  "scripts": {
    "light": "npm run light:setup && concurrently \"npm run light:api\" \"npm run light:ui\"",
    "light:setup": "node scripts/setup-light-mode.js",
    "light:api": "node src/light/server.js",
    "light:ui": "cd archon-ui-light && npm start",
    "light:stop": "pkill -f \"archon-light\" || true",
    "light:clean": "rm -rf archon-light-data",
    "dev": "docker-compose up --build",
    "dev:agents": "docker-compose --profile agents up --build -d",
    "build": "docker-compose build",
    "test": "npm run test:api && npm run test:ui",
    "test:api": "cd python && python -m pytest tests/ -v",
    "test:ui": "cd archon-ui-main && npm test",
    "docs": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VeloF2025/Archon.git"
  },
  "keywords": [
    "ai",
    "development",
    "agents",
    "mcp",
    "claude-code",
    "knowledge-management",
    "coding-assistant"
  ],
  "author": "Archon Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VeloF2025/Archon/issues"
  },
  "homepage": "https://github.com/VeloF2025/Archon#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.26.0",
    "@anthropic-ai/sdk": "^0.17.1",
    "@google/generative-ai": "^0.3.1",
    "body-parser": "^1.20.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}