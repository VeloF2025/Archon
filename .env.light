# Archon Light Mode Configuration
# ================================
# Minimal setup - only API key required!

# AI Provider (choose one)
OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-claude-api-key-here  
# GEMINI_API_KEY=your-gemini-api-key-here

# Light Mode Settings
ARCHON_MODE=light
ARCHON_LIGHT_PORT=3000
ARCHON_API_PORT=3001
LOG_LEVEL=info
STORAGE_PATH=./archon-light-data

# Optional: Custom model preferences
# OPENAI_MODEL=gpt-4
# ANTHROPIC_MODEL=claude-3-sonnet-20240229
# GEMINI_MODEL=gemini-pro

# Disable heavy features in light mode
DATABASE_ENABLED=false
AGENTS_ORCHESTRATION=false
REAL_TIME_FEATURES=false
BACKGROUND_TASKS=false

# Basic features only
MCP_ENABLED=true
CHAT_ENABLED=true
KNOWLEDGE_SEARCH=true
LOCAL_STORAGE=true